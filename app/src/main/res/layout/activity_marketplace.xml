<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5ffec">

    <!-- Top Box -->

    <!-- Middle Texts -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="348dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="198dp"
                android:layout_height="65dp"
                android:layout_marginTop="-0dp"
                android:layout_marginStart="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ggtit" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/user"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/user" />

    </LinearLayout>

    <TextView
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="120dp"
        android:text="My Store"
        android:textColor="#616161"
        android:textSize="29sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="25dp"
        android:gravity="center_vertical"
        android:text="Home"
        android:textColor="#484848"
        android:textSize="29dp" />

    <TextView
        android:layout_width="324dp"
        android:layout_height="49dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="260dp"
        android:text="Welcome to your Marketplace, Benedict"
        android:textColor="#8b8b8b"
        android:textSize="19sp"
        android:gravity="center_vertical" />

    <!-- Bottom Box -->

    <!-- Bottom Navigation -->

    <RelativeLayout
        android:layout_width="441dp"
        android:layout_height="105dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="12dp"
        android:background="#f5ffec">

        <TextView
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="80dp"
            android:gravity="center_vertical"
            android:text="0 of 4 tasks complete"
            android:textColor="#929292"
            android:textSize="11sp" />

        <TextView
            android:layout_width="177dp"
            android:layout_height="21dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:text="Your trial just started"
            android:textColor="#8b8b8b"
            android:textSize="16sp" />

        <TextView
            android:layout_width="139dp"
            android:layout_height="27dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:text="Setup guide"
            android:textColor="#5d5d5d"
            android:textSize="23sp" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="61dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-4dp"
            android:src="@drawable/flag" />
    </RelativeLayout>

    <View
        android:id="@+id/navigation_bar_section"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="#FFD8FDC1" />

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_icon_1"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginStart="0dp"
            android:contentDescription="Navigation Icon 1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/nav_icon_2"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 2"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/nav_icon_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 3"
            android:src="@drawable/cart" />

        <ImageView
            android:id="@+id/nav_icon_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="-7dp"
            android:contentDescription="Navigation Icon 4"
            android:src="@drawable/dot" />
    </LinearLayout>


</RelativeLayout>