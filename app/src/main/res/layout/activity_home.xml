<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5ffec">

    <ImageView
        android:id="@+id/rectangle17"
        android:layout_width="363dp"
        android:layout_height="255dp"
        android:layout_marginTop="-21dp"
        android:src="@drawable/rectangle17"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corner_shape" />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="303dp"
        android:layout_height="145dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="71dp"
        android:text="Hello\n   Username !"
        android:textColor="#d8fdc1"
        android:textSize="34sp"
        android:textAlignment="center"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/user1"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="251dp"
        android:layout_marginTop="142dp"
        android:src="@drawable/user1" />

    <ImageView
        android:id="@+id/finallogo1"
        android:layout_width="118dp"
        android:layout_height="105dp"
        android:src="@drawable/finallogo1" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="198dp"
        android:layout_height="65dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="31dp"
        android:src="@drawable/image4"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="212dp"
        android:background="#d9d9d9"
        android:background="@drawable/rounded_corner_shape" />

    <TextView
        android:id="@+id/plant_status"
        android:layout_width="247dp"
        android:layout_height="30dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="228dp"
        android:text="Your plant is looking good\n"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/image13"
        android:layout_width="32dp"
        android:layout_height="31dp"
        android:layout_marginStart="274dp"
        android:layout_marginTop="219dp"
        android:src="@drawable/image13" />

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="92dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="334dp"
        android:background="#d8fdc1"
        android:background="@drawable/rounded_corner_shape" />

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="92dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="477dp"
        android:background="#d8fdc1"
        android:background="@drawable/rounded_corner_shape" />

    <TextView
        android:id="@+id/moisture_level"
        android:layout_width="198dp"
        android:layout_height="26dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="342dp"
        android:text="Moisture level"
        android:textColor="#3e2900"
        android:textSize="22sp"
        android:textAlignment="center"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/fertilizer_level"
        android:layout_width="234dp"
        android:layout_height="52dp"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="480dp"
        android:text="Fertilizer level "
        android:textColor="#3e2900"
        android:textSize="22sp"
        android:textAlignment="center"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/image15"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="317dp"
        android:layout_marginTop="353dp"
        android:src="@drawable/droplet" />

    <TextView
        android:id="@+id/moisture_percentage"
        android:layout_width="68dp"
        android:layout_height="50dp"
        android:layout_marginStart="245dp"
        android:layout_marginTop="352dp"
        android:text="68%"
        android:textColor="#3e2900"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/fertilizer_percentage"
        android:layout_width="67dp"
        android:layout_height="42dp"
        android:layout_marginStart="245dp"
        android:layout_marginTop="497dp"
        android:text="83%"
        android:textColor="#3e2900"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/image16"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="307dp"
        android:layout_marginTop="494dp"
        android:src="@drawable/fert" />

    <TextView
        android:id="@+id/last_watered"
        android:layout_width="262dp"
        android:layout_height="53dp"
        android:layout_marginStart="-52dp"
        android:layout_marginTop="638dp"
        android:text="Last Watered:\n "
        android:textColor="#1b571e"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/plant_status"
        android:layout_width="247dp"
        android:layout_height="30dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="670dp"
        android:text=" Plants were watered 9 hours ago\n"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/soil_moisture_tip"
        android:layout_width="229dp"
        android:layout_height="28dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="379dp"
        android:text="Optimal soil moisture ensures healthy crop growth !"
        android:textColor="#3e2900"
        android:textSize="14sp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/fertilizer_tip"
        android:layout_width="229dp"
        android:layout_height="28dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="528dp"
        android:text="Perfect fertilizer levels promote maximum yield !"
        android:textColor="#3e2900"
        android:textSize="14sp"
        android:gravity="center_vertical" />

    <View
        android:id="@+id/navigation_bar_section"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="#FFD8FDC1" />

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_icon_1"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginStart="0dp"
            android:contentDescription="Navigation Icon 1"
            android:src="@drawable/crop" />

        <ImageView
            android:id="@+id/nav_icon_2"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 2"
            android:src="@drawable/cam" />

        <ImageView
            android:id="@+id/nav_icon_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 3"
            android:src="@drawable/tag" />

        <ImageView
            android:id="@+id/nav_icon_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="-7dp"
            android:contentDescription="Navigation Icon 4"
            android:src="@drawable/cart" />
    </LinearLayout>

</RelativeLayout>
