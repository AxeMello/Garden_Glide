<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5FFEC"
    tools:context=".ScanActivity">

    <!-- Logo and User Image Section -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="348dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="198dp"
                android:layout_height="65dp"
                android:layout_marginTop="-0dp"
                android:layout_marginStart="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ggtit" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/user"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/user" />

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="91dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.527"
        app:title="Recent Scans"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:titleTextColor="#292929" />

    <ImageView
        android:id="@+id/spid"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="452dp"
        android:src="@drawable/spid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGardenGlideAdmin"
        android:layout_width="229dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:text="Plant 1"
        android:textColor="#616161"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="652dp" />

    <TextView
        android:id="@+id/last30Days"
        android:layout_width="159dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="Spidermites"
        android:textColor="#788b78"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="693dp" />

    <ImageView
        android:id="@+id/plant"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="452dp"
        android:src="@drawable/plant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGardenGlideAdmin"
        android:layout_width="229dp"
        android:layout_height="41dp"
        android:layout_marginStart="240dp"
        android:text="Plant 1"
        android:textColor="#616161"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="652dp" />

    <TextView
        android:id="@+id/last30Days"
        android:layout_width="159dp"
        android:layout_height="32dp"
        android:layout_marginStart="240dp"
        android:text="Spidermites"
        android:textColor="#788b78"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="693dp" />

    <View
        android:id="@+id/recent_scans_background"
        android:layout_width="337dp"
        android:layout_height="132dp"
        android:background="#FFD8FDC1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom Section with Diagnostic Instruction -->

    <ImageView
        android:id="@+id/cam"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/cam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/reload"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/reload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/diagnostic_instruction_text"
        android:layout_width="261dp"
        android:layout_height="44dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Point the camera at your plant to get a diagnosis"
        android:textColor="#424242"
        android:textSize="14.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <TextView
        android:id="@+id/image_prediction_title"
        android:layout_width="190dp"
        android:layout_height="27dp"
        android:layout_marginTop="176dp"
        android:gravity="center"
        android:text="Image Prediction"
        android:textColor="#292929"
        android:textSize="20.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/navigation_bar_section"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:alpha="0.5"
        android:background="#FFD8FDC1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/nav_icon_1"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginStart="00dp"
            android:contentDescription="Navigation Icon 1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/nav_icon_2"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 2"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/nav_icon_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 3"
            android:src="@drawable/cart" />

        <ImageView
            android:id="@+id/nav_icon_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="-7dp"
            android:contentDescription="Navigation Icon 4"
            android:src="@drawable/dot" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
