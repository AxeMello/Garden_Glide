<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5ffec">

    <!-- Top Box -->
    <RelativeLayout
        android:layout_width="348dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-22dp">

        <ImageView
            android:id="@+id/user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="37dp"
            android:src="@drawable/user" />

        <RelativeLayout
            android:layout_width="278dp"
            android:layout_height="71dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="22dp"
            android:background="#80d8fdc1"
            android:clipToOutline="true"
            android:shapeRadius="40dp"/>


        <ImageView
            android:layout_width="198dp"
            android:layout_height="65dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="31dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ggtit" />
    </RelativeLayout>

    <!-- Middle Texts -->
    <TextView
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:layout_marginStart="20dp"
        android:text="Product title"
        android:textColor="#616161"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/firstImage"
        android:layout_width="31dp"
        android:layout_height="28dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/image"/>

    <ImageView
        android:id="@+id/firstImage"
        android:layout_width="31dp"
        android:layout_height="28dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="350dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/image"/>

    <TextView
        android:id="@+id/activeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="60dp"
        android:text="Active"
        android:textColor="#5a5a5a"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="20dp" />

    <TextView
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:text="Media"
        android:textColor="#484848"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/firstImage"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/image"/>

    <ImageView
        android:id="@+id/firstImage"
        android:layout_width="31dp"
        android:layout_height="28dp"
        android:layout_marginTop="310dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/image"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="310dp"
        android:text="Add description"
        android:textColor="#8b8b8b"
        android:textSize="19sp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginTop="350dp"
        android:layout_marginStart="60dp"
        android:gravity="center_vertical"
        android:text="0.00"
        android:textColor="#484848"
        android:textSize="20sp" />

    <!-- Bottom Box -->
    <RelativeLayout
        android:layout_width="441dp"
        android:layout_height="105dp"
        android:layout_marginTop="420dp"
        android:background="#f5ffec">

        <TextView
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:text="0 of 4 tasks complete"
            android:textColor="#929292"
            android:textSize="11sp" />

        <TextView
            android:layout_width="177dp"
            android:layout_height="21dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:text="Your trial just started"
            android:textColor="#8b8b8b"
            android:textSize="16sp" />

        <TextView
            android:layout_width="139dp"
            android:layout_height="27dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:text="Setup guide"
            android:textColor="#5d5d5d"
            android:textSize="23sp" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="61dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="-21dp"
            android:src="@drawable/image" />
    </RelativeLayout>

    <!-- Bottom Navigation -->
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:background="#80d8fdc1">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/image" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="215dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/image" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/image" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="311dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/image" />
    </RelativeLayout>

</RelativeLayout>
