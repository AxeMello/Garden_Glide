<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5ffec"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="348dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="198dp"
                android:layout_height="65dp"
                android:layout_marginTop="-0dp"
                android:layout_marginStart="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ggtit" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/user"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/user" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="13dp">

        <TextView
            android:id="@+id/textMarkets"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:layout_marginBottom="240dp"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:text="Markets"
            android:textColor="#616161"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="182dp"
            android:layout_height="4dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="325dp"
            android:src="@drawable/image" />

        <TextView
            android:id="@+id/textBrand"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="73dp"
            android:layout_marginStart="30dp"
            android:gravity="center_vertical"
            android:text="Brand"
            android:textColor="#616161"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textDomains"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="170dp"
            android:layout_marginStart="30dp"
            android:gravity="center_vertical"
            android:text="Domains"
            android:textColor="#616161"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textGardenGlideAdmin"
            android:layout_width="229dp"
            android:layout_height="41dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="160dp"
            android:gravity="center_vertical"
            android:text="Your Profile"
            android:textColor="#616161"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textCustomerPrivacy"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="640dp"
            android:gravity="center_vertical"
            android:text="Customer privacy"
            android:textColor="#616161"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="331dp"
            android:gravity="center_vertical"
            android:text="Settings"
            android:textColor="#616161"
            android:textSize="26sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="182dp"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="299dp"/>

    <RelativeLayout
        android:layout_width="182dp"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="628dp" />

    <TextView
        android:id="@+id/textNotification"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="460dp"
        android:gravity="center_vertical"
        android:text="Notification"
        android:textColor="#616161"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textLanguages"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="220dp"
        android:gravity="center_vertical"
        android:text="Languages"
        android:textColor="#616161"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textPolicies"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="520dp"
        android:gravity="center_vertical"
        android:text="Policies"
        android:textColor="#616161"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="34dp"
        android:background="#f5ffec"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/navigation_bar_section"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:alpha="0.5"
            android:background="#FFD8FDC1"/>

    </RelativeLayout>

    <View
        android:id="@+id/navigation_bar_section"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="#FFD8FDC1" />

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_icon_1"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginStart="0dp"
            android:contentDescription="Navigation Icon 1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/nav_icon_2"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 2"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/nav_icon_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 3"
            android:src="@drawable/cart" />

        <ImageView
            android:id="@+id/nav_icon_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="-7dp"
            android:contentDescription="Navigation Icon 4"
            android:src="@drawable/dot" />
    </LinearLayout>

    <TextView
        android:id="@+id/textCustomerData"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="580dp"
        android:gravity="center_vertical"
        android:text="Customer data"
        android:textColor="#616161"
        android:textSize="20sp" />

</RelativeLayout>