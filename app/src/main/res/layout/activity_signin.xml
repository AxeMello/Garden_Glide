<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5ffec">

    <ImageView
        android:id="@+id/arden"
        android:layout_width="198dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="106dp"
        android:contentDescription="@string/arden_description"
        android:foregroundGravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/ggtit" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:contentDescription="@string/arrow_description"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow" />

    <TextView
        android:id="@+id/signupHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="120dp" />

    <!-- Create an account text -->


    <!-- Username Field -->

    <TextView
        android:id="@+id/createAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="180dp"
        android:text="@string/create_account"
        android:textColor="#121712"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:text="@string/username"
        android:layout_below="@id/createAccountText"
        android:background="@color/midG"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#3D3D3D"
        android:padding="15dp"/>

    <!-- Name Field -->
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:text="@string/name"
        android:layout_below="@id/usernameEditText"
        android:background="@color/midG"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#3D3D3D"
        android:padding="15dp"/>

    <!-- Password Field -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:text="@string/password"
        android:layout_below="@id/nameEditText"
        android:background="@color/midG"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#3D3D3D"
        android:padding="15dp"/>

    <!-- Confirm Password Field -->
    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:text="@string/confirm_password"
        android:layout_below="@id/passwordEditText"
        android:background="@color/midG"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#3D3D3D"
        android:padding="15dp"/>

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/signUpButton"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:text="@string/sign_up"
        android:textColor="@color/black"
        android:layout_below="@id/confirmPasswordEditText"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Log In Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:text="@string/log_in"
        android:layout_below="@id/signUpButton"
        android:textColor="@color/black"

        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Terms and Policy Text -->
    <TextView
        android:id="@+id/termsPolicyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_privacy_policy"
        android:textColor="#638763"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</RelativeLayout>
