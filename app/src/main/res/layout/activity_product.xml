<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5FFEC">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:background="#f5ffec">

        <RelativeLayout
            android:layout_width="474dp"
            android:layout_height="907dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="26dp"
            android:background="#f5ffec" />

        <RelativeLayout
            android:layout_width="353dp"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="667dp"
            android:background="#000000">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:src="@drawable/image" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="19dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="259dp"
                android:layout_marginBottom="17dp"
                android:text="Products"
                android:textColor="#626262"
                android:textSize="20sp"
                android:gravity="center_vertical" />

            <RelativeLayout
                android:layout_width="278dp"
                android:layout_height="71dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="22dp"
                android:alpha="0.5"
                android:background="#d8fdc1" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/background"
        android:layout_width="284dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="390dp"
        android:background="#303030" />

    <TextView
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="472dp"
        android:layout_marginEnd="120dp"
        android:gravity="center_vertical"
        android:text="Add your products"
        android:textColor="#D3D3D3"
        android:textSize="14sp" />

    <TextView
        android:layout_width="245dp"
        android:layout_height="23dp"
        android:layout_marginTop="380dp"
        android:layout_marginStart="80dp"
        android:gravity="center_vertical"
        android:text="First up: add your products"
        android:textColor="#5a5a5a"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/product"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/product" />

    <RelativeLayout
        android:layout_width="348dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp">

        <ImageView
            android:id="@+id/image4"
            android:layout_width="198dp"
            android:layout_height="65dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ggtit" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/user"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/user" />

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="248dp">

        <TextView
            android:layout_width="299dp"
            android:layout_height="66dp"
            android:layout_marginTop="380dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="To start selling on Garden Glide, migrate your\nproducts or source new ones."
            android:textColor="#000000"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:id="@+id/navigation_bar_section"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="#FFD8FDC1" />

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_icon_1"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginStart="0dp"
            android:contentDescription="Navigation Icon 1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/nav_icon_2"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 2"
            android:src="@drawable/market" />

        <ImageView
            android:id="@+id/nav_icon_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 3"
            android:src="@drawable/tag" />

        <ImageView
            android:id="@+id/nav_icon_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="-7dp"
            android:contentDescription="Navigation Icon 4"
            android:src="@drawable/dot" />
    </LinearLayout>

</RelativeLayout>