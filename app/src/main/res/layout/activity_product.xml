<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5FFEC">

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:background="#f5ffec">

        <RelativeLayout
            android:layout_width="474dp"
            android:layout_height="907dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="26dp"
            android:background="#f5ffec" />

        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="277dp"
            android:background="#000000">

            <TextView
                android:layout_width="299dp"
                android:layout_height="66dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="33dp"
                android:text="To start selling on Garden Glide, migrate your\nproducts or source new ones."
                android:textColor="#959595"
                android:textSize="13sp"
                android:gravity="center_vertical|center_horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="353dp"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="667dp"
            android:background="#000000">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:src="@drawable/image" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="19dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="259dp"
                android:layout_marginBottom="17dp"
                android:text="Products"
                android:textColor="#626262"
                android:textSize="20sp"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:alpha="0.5"
            android:background="#d8fdc1" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/home" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="4.61dp"
            android:src="@drawable/market" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="4.61dp"
            android:src="@drawable/tag" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="130dp"
            android:layout_marginBottom="4.61dp"
            android:src="@drawable/dot" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/background"
        android:layout_width="284dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="261.5dp"
        android:background="#303030"
        />

    <TextView
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="272dp"
        android:text="Add your products"
        android:textColor="#D3D3D3"
        android:textSize="14sp"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="245dp"
        android:layout_height="23dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="389dp"
        android:text="First up: add your products"
        android:textColor="#5a5a5a"
        android:textSize="20sp"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/product"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/product" />

    <RelativeLayout
        android:layout_width="348dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp">

        <ImageView
            android:id="@+id/user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="308dp"
            android:layout_marginTop="37dp"
            android:src="@drawable/user" />

        <RelativeLayout
            android:layout_width="278dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="22dp"
            android:background="#d8fdc1"
            android:alpha="0.5"/>

            <ImageView
            android:id="@+id/image4"
            android:layout_width="198dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="31dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ggtit" />

        </RelativeLayout>
</RelativeLayout>
