<?xml version="1.0" encoding="utf-8"?>
    <!-- res/layout/activity_auto1.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5FFEC">

    <!-- Top Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="348dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="198dp"
                android:layout_height="65dp"
                android:layout_marginTop="-0dp"
                android:layout_marginStart="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ggtit" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/user"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/user" />

    </LinearLayout>

    <ImageView
        android:id="@+id/time"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="355dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/time" />

    <ImageView
        android:id="@+id/date"
        android:layout_width="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="20dp"
        android:layout_height="50dp"
        android:src="@drawable/date" />

    <ImageView
        android:id="@+id/topA"
        android:layout_width="50dp"
        android:layout_marginTop="640dp"
        android:layout_marginStart="22dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp"
        android:src="@drawable/topa" />

    <ImageView
        android:id="@+id/tick"
        android:layout_width="50dp"
        android:layout_marginTop="650dp"
        android:layout_marginStart="240dp"
        android:layout_marginRight="20dp"
        android:layout_height="40dp"
        android:src="@drawable/tick" />


    <Button
        android:id="@+id/turn_off_text"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:layout_below="@id/topA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Turn Off"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:backgroundTint="#D8FDC1"
        />

    <TextView
        android:id="@+id/watering_history_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/alata"
        android:textSize="22dp"
        android:text="@string/watering_history" />
    <!-- Bottom Section -->

    <RelativeLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-18dp"
        android:padding="16dp">

        <!-- Additional Boxes and Text -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="168dp"
                android:layout_marginStart="70dp"
                android:text="In 2 days"
                android:textColor="#95aa96"
                android:textSize="12sp" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:layout_marginStart="70dp"
            android:text= "few minutes ago"
            android:textColor="#8fa491"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginStart="70dp"
            android:fontFamily="@font/alata"
            android:text="Last Watered"
            android:textColor="#404340"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="652dp"
            android:layout_marginStart="60dp"
            android:text="80%"
            android:textColor="#469200"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="629dp"
            android:layout_marginStart="60dp"

            android:text="Current Level"
            android:textColor="#494b48"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="15dp">

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="570dp"
            android:layout_marginEnd="118dp"
            android:fontFamily="@font/alata"
            android:text="Water Tank Level"
            android:textColor="#2c302c"
            android:textSize="20sp" />
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_marginStart="220dp"
        android:fontFamily="@font/alata"
        android:text="System Status"
        android:textColor="#313431"
        android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="629dp"
            android:layout_marginStart="280dp"
            android:fontFamily="@font/alata"            android:text="Active"
            android:textColor="#494b48"
            android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="652dp"
        android:layout_marginStart="280dp"
        android:text="Yes"
        android:textColor="#44a029"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/alata"
        android:text="Smart Watering System"
        android:textColor="#212521"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="182dp"
        android:fontFamily="@font/alata"
        android:text="Automatically waters your plants when needed."
        android:textColor="#555755"
        android:textSize="16sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/alata"
        android:text="Next Watering"
        android:textColor="#434643"
        android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:id="@+id/navigation_bar_section"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="833dp"
        android:alpha="0.5"
        android:background="#FFD8FDC1" />

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-4dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homee"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:contentDescription="Navigation Icon 1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:contentDescription="Navigation Icon 2"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/cartin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:contentDescription="Navigation Icon 3"
            android:src="@drawable/cart" />

        <ImageView
            android:id="@+id/nav_icon_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="-7dp"
            android:contentDescription="Navigation Icon 4"
            android:src="@drawable/dot" />
    </LinearLayout>

</RelativeLayout>