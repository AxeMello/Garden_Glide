<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5ffec">

    <TextView
        android:id="@+id/title"
        android:layout_width="331dp"
        android:layout_height="96dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="140dp"
        android:text="Crop recommendation"
        android:textColor="#626262"
        android:textSize="30sp"
        android:textAlignment="center" />



    <TextView
        android:id="@+id/crop_recommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="250dp"
        android:text="Crop recommended"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textAlignment="center" />
    <TextView
        android:layout_width="317dp"
        android:layout_height="124dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="290dp"
        android:background="#d9d9d9">
    </TextView>

    <TextView
        android:layout_width="317dp"
        android:layout_height="124dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="570dp"
        android:background="#d9d9d9">
    </TextView>

    <TextView
        android:id="@+id/fertilizer_required"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="527dp"
        android:text="Fertilizer required"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textAlignment="center" />


    <View
        android:id="@+id/navigation_bar_section"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="#FFD8FDC1" />

    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_icon_1"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_marginStart="0dp"
            android:contentDescription="Navigation Icon 1"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/nav_icon_2"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 2"
            android:src="@drawable/market" />

        <ImageView
            android:id="@+id/nav_icon_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:contentDescription="Navigation Icon 3"
            android:src="@drawable/tag" />

        <ImageView
            android:id="@+id/nav_icon_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="-7dp"
            android:contentDescription="Navigation Icon 4"
            android:src="@drawable/dot" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="348dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/ggtit"
                android:layout_width="198dp"
                android:layout_height="65dp"
                android:layout_marginTop="-0dp"
                android:layout_marginStart="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ggtit" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/user"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/user" />

    </LinearLayout>
</RelativeLayout>